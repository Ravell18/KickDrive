@page
@model EnergyUI.Pages.Containers.EditDriverModel
@{
    ViewData["Title"] = "EditDriver";
}
@section Scripts{
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}

<h1>Editar Conductores</h1>
<body>


    <form class="mt-3" method="post">
        <div class="d-flex justify-content-end p-2">
            <button type="submit" class="btn btn-primary m-2" name="button" value="Editar">Actualizar</button>
            <button type="submit" class="btn btn-danger m-2" name="button" value="Eliminar">Eliminar</button>
            <a asp-page="/Containers/CDriver" class="btn btn-secondary m-2">Cancelar</a>
        </div>
        <input hidden asp-for="Driver.Id" />
        <div class="form-group">
            <label>Nombre del conductor</label>
            <input type="text" class="form-control" asp-for="Driver.DriverName" />
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>INE</label>
                <input type="text" class="form-control" asp-for="Driver.INE" />
            </div>
            <div class="form-group col-md-6">
                <label>Licencia</label>
                <input type="text" class="form-control" asp-for="Driver.License" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>NSS</label>
                <input type="text" class="form-control" asp-for="Driver.NSS" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-5">
                <label for="exampleFormControlFile4">Fotografia de perfil</label>
                <div class="custom-file">
                    <input type="file" asp-for="ProfilePhoto" class="custom-file-input form-control" lang="es">
                    <label class="custom-file-label" for="ProfilePhoto">Elige tu foto</label>
                    <input hidden asp-for="Driver.ProfilePhoto" />
                </div>
            </div>
        </div>
    </form>

</body>


